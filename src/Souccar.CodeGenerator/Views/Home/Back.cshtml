@model Souccar.CodeGenerator.Models.BackendModel

@{
    ViewData["Title"] = "Back";
}

<form method="post" asp-controller="Home" asp-action="Back">
    <div class="container">
        <div class="form-group ">
            <label asp-for="ModuleName">Module</label>
            <input asp-for="ModuleName" class="form-control" />
            <span asp-validation-for="ModuleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type">Generate Type</label>
            <select asp-for="Type" asp-items="ViewBag.Types" class="form-control">
                @*<option value="0">Services</option>
                <option value="1">Localization</option>
                <option value="2">Permissions</option>*@
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-outline-primary">Generate</button>
        </div>
        <div class="row p-3">
            @{
                if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.SuccessMessage
                    </div>
                }
            }
        </div>
    </div>
</form>
